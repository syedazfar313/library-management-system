<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sam.controllers.HomeController">
    <children>
        <Pane prefHeight="200.0" prefWidth="200.0">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="25.0" layoutY="-19.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/book.png" />
                    </image>
                </ImageView>
                <Label layoutX="-1.0" layoutY="100.0" text="Library Management System">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <Button id="addBookButton" layoutX="48.0" layoutY="131.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="104.0" text="Add Book" textAlignment="CENTER" onAction="#openAddBook" />
                <Button id="listBookButtons" layoutX="48.0" layoutY="161.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="104.0" text="List Books" textAlignment="CENTER" onAction="#openListBooks" />
            </children>
        </Pane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
