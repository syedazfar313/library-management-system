<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sam.controllers.AddBookController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <TextField fx:id="bookNameText" layoutX="7.0" layoutY="14.0" prefHeight="25.0" prefWidth="371.0" promptText="Name" onAction="#save" />
            <TextField fx:id="bookAuthorNameText" layoutX="8.0" layoutY="48.0" prefHeight="25.0" prefWidth="371.0" promptText="Author Name" />
            <TextField fx:id="bookPublisherNameText" layoutX="7.0" layoutY="81.0" prefHeight="25.0" prefWidth="371.0" promptText="Publisher" />
            <TextField fx:id="bookNumOfPagesText" layoutX="7.0" layoutY="112.0" prefHeight="25.0" prefWidth="371.0" promptText="# of Pages" />
            <DatePicker fx:id="publishedDatePicker" layoutX="9.0" layoutY="148.0" prefHeight="25.0" prefWidth="182.0" />
            <Button layoutX="142.0" layoutY="185.0" mnemonicParsing="false" text="Save" onAction="#save" />
            <Button layoutX="189.0" layoutY="185.0" mnemonicParsing="false" text="Cancel" onAction="#cancel"/>
            <CheckBox layoutX="250.0" layoutY="152.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="70.0" text="In Stock" />
         </children>
      </AnchorPane>
   </children>
</VBox>
